main-color = #4CAF50
second-color = #FF9800
@font-face {
  font-family: 'jf-openhuninn-1.1';
  src: url('jf-openhuninn-11.woff2') format('woff2'),
          url('jf-openhuninn-11.woff') format('woff');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

body
  font-family "jf-openhuninn-1.1"

h2
  padding-bottom 10px
  font-size 2.5rem
h3
  padding-top 20px
  font-size 1.4rem
.card-body h3
  padding-top 0px

.container-fluid
  padding-top 20px
  padding-bottom 20px

.bg-even
  background-color #f8f8f8 !important

.bg-light
  background-color: rgba(255,255,255,0.8) !important
  -webkit-box-shadow: 0 5px 6px -5px #858585
  box-shadow: 0 5px 6px -5px #858585

.card-content
  background-color #FFFFFF
  border-radius: 8px;
  -webkit-box-shadow: 0 4px 8px 6px #EEEEEE;
  box-shadow: 0 4px 8px 6px #EEEEEE;
  padding-top 40px
  padding-bottom 40px

.card.card-content
  padding-top 0px
  padding-bottom 0px
.card-content:hover
  -webkit-box-shadow: 0 4px 12px 12px #EEEEEE
  box-shadow: 0 4px 12px 12px #EEEEEE

p.card-text
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;

a:hover
  color: main-color !important

a.nav-link.active
  color: main-color !important

span.icon
  font-size 2.5rem

.icon a
  color: main-color !important

.card
  margin-bottom 15px !important

&::-webkit-scrollbar
  width: 12px
  height: 12px

&::-webkit-scrollbar-track
  background-color: transparent

&::-webkit-scrollbar-track:hover
  background: transparent

&::-webkit-scrollbar-thumb
  background: main-color
  border-radius: 8px

&::-webkit-scrollbar-thumb:hover
  background-color: second-color
